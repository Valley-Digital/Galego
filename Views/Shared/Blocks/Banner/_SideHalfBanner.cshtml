@model List<DomainCompany.Entities.Banner>
@if (Model != null && Model.Any())
{
<div class="ui container side-halfbanner">
    <div class="slideCategoria">
        @foreach (var banner in Model)
        {
          <div class="container">
             <div class="image">
                <a href="@banner.Link"  title="@banner.Name">
                    <img src="/assets/image/loading.svg" data-src="@banner.NameFileImage" alt="@banner.Name" title="@banner.Name" class="ui image centered" onerror="imgError(this)">
                </a>
             </div>
          </div>
        } 
    </div>
</div>
}